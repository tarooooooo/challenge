<div class="xy_center">

  <%= render "shared/error_messages", user: @user %>

  <p class ="title">ユーザー編集</p>

  <%= form_with model: @user, local: true do |f| %>

    <div class="field">
      <%= f.label :アイコン %><br/>
      <%= f.file_field :icon_image %>
    </div>

    <div class="field">
      <%= f.label :ニックネーム %><br />
      <%= f.text_field :nickname, autofocus: true, style:"width: 300px;" %>
    </div>

    <div class="field">
      <%= f.label :紹介文%><br />
      <%= f.text_area :introduction, autofocus: true %>
    </div>

    <div class="">
      <%= f.submit "保存", class:"btn_green" %>
    </div>

  <% end %>
</div>