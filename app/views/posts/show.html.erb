<div class="post_show">
  <div class="box">
    <div class="bg-image">
      <img class="genre_image" src="/assets/<%= @post.genre.image_id %>"  alt="アイキャッチ画像">
      <p class="title_text"><%= @post.title %></p>
      <p class="title_text_s">人数：１ / <%= @post.limit.to_s %> 人</p>
    </div>
    <div class="flex">
      <div class="left_box flow_item right_border">
        <p>お約束の時間</p>
        <p class="time_lg"><%= @post.meeting_at.strftime("%H:%M") %>〜</p>
      </div>
      <div class="right_box flow_item flex">
        <div class="left_box flow_item user_box">
          <p>主催者：<%= @post.user.nickname %>さん</p>
          <div class="circle_img_s text-center ">
            <img src="/user_images/<%= @post.user.icon_image_id %>" width="50px" />
          </div>
        </div>
        <div class="right_box flow_item">
          <p>ユーザーのイメージ画像</p>
        </div>
      </div>
    </div>
    
    <div class="body">
      <p class >【お約束の内容】</p>
      <p class="post_body">
        <%= @post.body %>
      </p_>
    </div>
  </div>
</div>